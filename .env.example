# Required: Your Descope Project ID
DESCOPE_PROJECT_ID=P2XXXXX

# Optional: Management key for advanced features (user sync, etc.)
DESCOPE_MANAGEMENT_KEY=K2XXXXX

# Optional: Flow ID configured in Descope Console (default: sign-up-or-in)
DESCOPE_FLOW_ID=sign-up-or-in

# Optional: Redirect URL after successful authentication (default: /)
DESCOPE_REDIRECT_URL=/

# Optional: Descope web component version (default: 3.54.0)
DESCOPE_WEB_COMPONENT_VERSION=3.54.0

# Optional: Descope base URL (default: https://api.descope.com)
# DESCOPE_BASE_URL=https://api.descope.com

# MLflow Configuration
MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow.db
MLFLOW_ARTIFACT_ROOT=./mlartifacts

# Permission Mapping: Comma-separated list of roles considered admin
DESCOPE_ADMIN_ROLES=admin,mlflow-admin

# Default permission level for authenticated users (READ, EDIT, MANAGE)
DESCOPE_DEFAULT_PERMISSION=READ

# Username claim in JWT (default: sub, can also use email)
DESCOPE_USERNAME_CLAIM=sub
